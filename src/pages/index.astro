---
import Layout from '../layouts/Layout.astro'
---

<Layout title='0h_x0'>
  <main
    class='flex font-mono min-h-screen flex-col items-center w-full absolute top-0 left-0 pointer-events-none'
  >
    <h1
      class='text-[160px] text-gray-300 font-extrabold leading-[200px] absolute top-1/2 -translate-y-1/2 left-1/3 -translate-x-1/2'
    >
      好像 <br /> 还行
    </h1>
    <div
      class='flex flex-col items-start absolute left-[30%] top-1/3 mb-4 animate-fade-down duration-1000 ease-out'
    >
      <h2 class='text-[100px] font-bold mb-4'>0h_x0</h2>
      <p class='leading-6 text-[20px] text-gray-600'>
        一个前端程序员
        <br />
      </p>
    </div>
    <div
      class='absolute w-[28%] aspect-[0.75] right-1/4 top-1/2 -translate-y-1/2 translate-x-1/2'
    >
      <div
        class='rounded-lg min-h-[100px] max-h-[320px] w-[50%] aspect-[0.75] absolute left-[7%] top-[22%] bg-[#E0CCBE6F] ease-out animate-fade-down duration-1000 animate-delay-300'
      >
      </div>
      <div
        class='rounded-lg min-h-[100px] max-h-[320px] w-[50%] aspect-[0.75] absolute left-[25%] top-[5%] bg-[#6B8A7A6F] ease-out animate-fade-down duration-1000 animate-delay-500'
      >
      </div>
      <div
        class='rounded-lg min-h-[100px] max-h-[320px] w-[50%] aspect-[0.75] absolute left-[42%] top-[38%] bg-[#405D726F] ease-out animate-fade-down duration-1000 animate-delay-200'
      >
      </div>
    </div>
    <!-- <img src='/img/sonya6000.avif' alt='' class='rotate-12 h-40' /> -->
  </main>
</Layout>
